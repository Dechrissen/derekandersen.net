<div class="blog-entry">
    <p style="margin-right: 12%; margin-top: 0%; font-family: 'Merriweather';">
        {{number}}. <a href="/blog/{{filename}}">{{title}}</a>
        <br>
        <p class="blog-description"><i>{{description}}</i></p>
    </p>
    <p style="margin-left: 14%; margin-bottom: 0%; font-size: 80%; text-align: right; max-width: 100%;">
        {{date}} |
        <a href="/blog/{{filename}}">Read &#8594;</a>
    </p>
    <hr style="border: 1px dashed LightGrey;" />
</div>
